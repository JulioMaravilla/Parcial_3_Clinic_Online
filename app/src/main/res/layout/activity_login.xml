<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imglogin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/imglogin"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="45dp"/>

        <TextView
            android:id="@+id/TLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imglogin"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="Bienvenido a Clinic Online"
            android:textColor="#2CA7E0"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/username1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/TLogin"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:background="@drawable/editbuttom"
            android:drawableStart="@drawable/lgperson"
            android:drawablePadding="10dp"
            android:hint="Nombre de usuario:"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColorHint="#2CA7E0" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/editbuttom"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:hint="ContraseÃ±a:"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="#2CA7E0"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/username1"/>

        <TextView
            android:id="@+id/signin1"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/buttom"
            android:gravity="center"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/password1"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@id/TLogin"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:background="#78BBE6"/>

    </RelativeLayout>
</RelativeLayout>